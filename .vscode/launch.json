{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node with nodemon",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--inspect=9229",
                "--exec",
                "ts-node",
                "./src/init.ts"
            ],
            "restart": true,
        },
        {
            "type": "node",
            "name": "Debug TypeScript",
            "request": "attach",
            "port": 9229,
            "sourceMaps": true,
            "restart": true,
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceFolder}/node_modules/**/*.js",
                "${workspaceFolder}/dist/**/*.spec.js"
            ]
        }
    ]
}